<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:fitsSystemWindows="true"
                                        android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:clickable="true"
                android:id="@+id/v_main_content"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <include layout="@layout/toolbar_actionbar"/>

            <LinearLayout
                    android:id="@+id/v_landing_side_menu_hint"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="60dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/select_graph_using_side_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/v_landing_side_menu_hint_close"
                        android:padding="8dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:tint="@android:color/holo_red_dark"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_cancel_black_24dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_interval_hint"
                    tools:text="@string/interval_hint"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="16sp"
                    android:paddingEnd="16dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16sp"
                    android:textSize="14sp"
                    android:paddingRight="16dp"/>

            <HorizontalScrollView
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:id="@+id/v_card_holder_usd"
                        android:layout_marginTop="4dp"
                        android:clipToPadding="false"
                        android:padding="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                    <ImageView
                            android:layout_width="@dimen/landing_card_icon_width"
                            android:layout_margin="6dp"
                            android:padding="4dp"
                            android:tint="?colorPrimary"
                            android:src="@drawable/ic_dollar"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/landing_card_icon_width"/>

                </LinearLayout>


            </HorizontalScrollView>

            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">


                <LinearLayout
                        android:id="@+id/v_card_holder_eur"
                        android:layout_marginTop="4dp"
                        android:clipToPadding="false"
                        android:padding="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:tint="?colorPrimary"
                            android:layout_width="@dimen/landing_card_icon_width"
                            android:layout_margin="6dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_euro"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/landing_card_icon_width"/>


                </LinearLayout>


            </HorizontalScrollView>

            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">


                <LinearLayout
                        android:id="@+id/v_card_holder_parity"
                        android:layout_marginTop="4dp"
                        android:clipToPadding="false"
                        android:padding="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="@dimen/landing_card_icon_width"
                            android:layout_margin="6dp"
                            android:tint="?colorPrimary"
                            android:src="@drawable/ic_exchange_eur_usd"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/landing_card_icon_width"/>


                </LinearLayout>


            </HorizontalScrollView>

            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">


                <LinearLayout
                        android:id="@+id/v_card_holder_ons"
                        android:layout_marginTop="4dp"
                        android:clipToPadding="false"
                        android:padding="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="@dimen/landing_card_icon_width"
                            android:tint="?colorPrimary"
                            android:layout_margin="6dp"
                            android:src="@drawable/ic_gold"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/landing_card_icon_width"/>


                </LinearLayout>


            </HorizontalScrollView>


        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>


    <include layout="@layout/navdrawer_landing"/>


</android.support.v4.widget.DrawerLayout>