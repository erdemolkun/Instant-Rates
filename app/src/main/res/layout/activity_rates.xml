<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_rate_yorumlar"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_rate_enpara"
            android:layout_height="wrap_content"/>

    <demoapps.exchangegraphics.ui.ProgressWheel
            android:id="@+id/v_progress_wheel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:elevation="2dp"
            app:matProg_barColor="@color/colorPrimary"
            app:matProg_barSpinCycleTime="800"
            app:matProg_barWidth="2dp"
            app:matProg_circleRadius="26dp"
            app:matProg_progressIndeterminate="true"
            app:matProg_spinSpeed="0.7"/>


    <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:text="Dolar-TL GrafiÄŸi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_usd_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

</LinearLayout>