<resources>


    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#3fff</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogAnimationFade">
        <item name="android:windowEnterAnimation">@anim/fade_in_medium</item>
        <item name="android:windowExitAnimation">@anim/fade_out_medium</item>
    </style>

    <style name="side_item_style">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">@dimen/drawer_item_menu_text_size</item>
        <item name="android:minHeight">@dimen/drawer_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?colorPrimaryDark</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">16dp</item>
    </style>


</resources>
